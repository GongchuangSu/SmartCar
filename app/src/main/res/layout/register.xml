<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--标题显示-->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        >
        <TextView android:layout_centerInParent="true" android:textSize="20.0sp"
            android:textColor="#ff545454"  android:layout_width="match_parent"
            android:layout_height="match_parent" android:text="@string/qr_register"
            android:gravity="center"/>
    </LinearLayout>
    <!--详细注册信息-->
    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip">
        <LinearLayout
            android:background="@drawable/shape_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="邮        箱:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/email" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请输入邮箱"
                    android:inputType="textEmailAddress" android:maxLength="20" android:layout_weight="3"/>
            </LinearLayout>

            <View android:background="@drawable/shape_line" android:layout_width="fill_parent"
                android:layout_height="1.0px" />

            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:paddingLeft="1.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="用  户  名:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/username" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请输入用户名"
                    android:inputType="textPersonName" android:maxLength="20" android:layout_weight="3"/>
            </LinearLayout>

            <View android:background="@drawable/shape_line" android:layout_width="fill_parent"
                android:layout_height="1.0px" />

            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:paddingLeft="1.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="性        别:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/sex" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请输入性别"
                    android:inputType="textPersonName" android:maxLength="20" android:layout_weight="3"/>
            </LinearLayout>

            <View android:background="@drawable/shape_line" android:layout_width="fill_parent"
                android:layout_height="1.0px" />

            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:paddingLeft="1.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="年        龄:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/age" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请输入年龄"
                    android:inputType="textPersonName" android:maxLength="20" android:layout_weight="3"/>
            </LinearLayout>

            <View android:background="@drawable/shape_line" android:layout_width="fill_parent"
                android:layout_height="1.0px" />

            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:paddingLeft="1.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="密        码:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/password" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请输入密码"
                    android:maxLength="20"  android:layout_weight="3" android:inputType="textPassword"/>
            </LinearLayout>
            <View android:background="@drawable/shape_line" android:layout_width="fill_parent"
                android:layout_height="1.0px" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:paddingLeft="1.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="确认密码:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/password_again" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请再次输入密码"
                    android:maxLength="20"  android:layout_weight="3" android:inputType="textPassword"/>
            </LinearLayout>

            <View android:background="@drawable/shape_line" android:layout_width="fill_parent"
                android:layout_height="1.0px" />

            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="50.0dip">
                <TextView android:textSize="18.0sp" android:textColor="@android:color/black"
                    android:paddingLeft="1.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:gravity="right"
                    android:text="手  机  号:" android:layout_weight="1"/>
                <EditText android:textSize="16.0sp" android:textColor="#ff545454"
                    android:id="@+id/phonenumber" android:background="@android:color/white"
                    android:paddingLeft="10.0dip" android:layout_width="1px"
                    android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip" android:hint="请输入手机号"
                    android:maxLength="20" android:inputType="number" android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--提示信息显示-->
    <LinearLayout
        android:gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView android:textSize="14.0sp" android:textColor="#9e9c9c"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/register_tip"         android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"/>
    </LinearLayout>
    <!--按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button android:id="@+id/register_btn"  android:textSize="18.0sp"
            android:textColor="#ff000000"  android:background="@drawable/op_bg_selector"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="注 册" android:gravity="center"/>
    </LinearLayout>
</LinearLayout>